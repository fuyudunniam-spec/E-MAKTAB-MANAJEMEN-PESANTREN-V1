    <script>
        lucide.createIcons();

        function copyToClipboard(elementId, btnElement) {
            const textToCopy = document.getElementById(elementId).innerText.replace(/\s+/g, '');
            const tempInput = document.createElement("input");
            tempInput.value = textToCopy;
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand("copy");
            document.body.removeChild(tempInput);

            const originalHTML = btnElement.innerHTML;

            btnElement.innerHTML = `<i data-lucide="check" class="w-4 h-4"></i> Tersalin!`;
            btnElement.classList.replace('bg-gold-500/10', 'bg-green-500/10');
            btnElement.classList.replace('text-gold-500', 'text-green-600');

            lucide.createIcons();

            setTimeout(() => {
                btnElement.innerHTML = originalHTML;
                btnElement.classList.replace('bg-green-500/10', 'bg-gold-500/10');
                btnElement.classList.replace('text-green-600', 'text-gold-500');
                lucide.createIcons();
            }, 2000);
        }

        function selectAmount(btn, amount) {
            document.querySelectorAll('.amount-btn').forEach(el => {
                el.classList.remove('border-2', 'border-navy-900', 'text-navy-900', 'font-bold', 'bg-surface-50', 'active-amount');
                el.classList.add('border', 'border-slate-200', 'text-slate-600', 'font-semibold', 'bg-white');
            });

            document.getElementById('custom-amount').value = '';

            btn.classList.remove('border', 'border-slate-200', 'text-slate-600', 'font-semibold', 'bg-white');
            btn.classList.add('border-2', 'border-navy-900', 'text-navy-900', 'font-bold', 'bg-surface-50', 'active-amount');
        }

        function clearAmountSelection() {
            document.querySelectorAll('.amount-btn').forEach(el => {
                el.classList.remove('border-2', 'border-navy-900', 'text-navy-900', 'font-bold', 'bg-surface-50', 'active-amount');
                el.classList.add('border', 'border-slate-200', 'text-slate-600', 'font-semibold', 'bg-white');
            });
        }

        function handleFileUpload(event) {
            const file = event.target.files[0];
            const placeholder = document.getElementById('upload-placeholder');
            const area = document.getElementById('upload-area');

            if (file) {
                area.classList.replace('border-slate-200', 'border-navy-900');
                area.classList.replace('border-dashed', 'border-solid');
                area.classList.add('bg-surface-50');

                placeholder.innerHTML = `
                    <i data-lucide="check-circle" class="w-6 h-6 text-green-500"></i>
                    <div>
                        <p class="text-sm font-bold text-navy-900 truncate w-32 md:w-48">${file.name}</p>
                        <p class="text-[10px] text-slate-500 uppercase tracking-widest mt-0.5">Siap Diunggah</p>
                    </div>
                `;
                lucide.createIcons();
            }
        }

        function submitForm() {
            const btn = document.querySelector('button[type="submit"]');
            const originalContent = btn.innerHTML;

            btn.innerHTML = `<i data-lucide="loader-2" class="w-5 h-5 animate-spin"></i> Memproses...`;
            lucide.createIcons();

            setTimeout(() => {
                btn.innerHTML = `<i data-lucide="check" class="w-5 h-5"></i> Berhasil`;
                btn.classList.replace('bg-gold-500', 'bg-navy-900');
                btn.classList.replace('hover:bg-gold-600', 'hover:bg-navy-950');
                lucide.createIcons();

                setTimeout(() => {
                    alert('Data donasi berhasil disubmit (Simulasi).');
                    btn.innerHTML = originalContent;
                    btn.classList.replace('bg-navy-900', 'bg-gold-500');
                    btn.classList.replace('hover:bg-navy-950', 'hover:bg-gold-600');
                }, 1000);
            }, 1500);
        }
    </script>
</body>

