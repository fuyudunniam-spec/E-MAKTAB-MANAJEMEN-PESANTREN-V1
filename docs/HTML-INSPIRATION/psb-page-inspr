// ============================================
// ACCORDION COMPONENTS (FAQ)
// ============================================

const AccordionItem = ({ children, className }) => (
    <div className={`border-b border-slate-200 last:border-0 ${className}`}>
        {children}
    </div>
);

const AccordionTrigger = ({ children, isOpen, onClick }) => (
    <button
        onClick={onClick}
        className="flex flex-1 items-center justify-between py-6 font-serif font-bold text-[#0f172a] text-lg md:text-xl hover:text-[#c09c53] transition-all w-full text-left"
    >
        {children}
        <ChevronDown className={`h-5 w-5 shrink-0 transition-transform duration-300 text-[#c09c53] ${isOpen ? 'rotate-180' : ''}`} />
    </button>
);

const AccordionContent = ({ children, isOpen }) => (
    <div className={`overflow-hidden text-sm transition-all duration-500 ease-in-out ${isOpen ? 'max-h-96 pb-6 opacity-100' : 'max-h-0 opacity-0'}`}>
        <div className="text-slate-500 font-light leading-relaxed text-base font-sans">
            {children}
        </div>
    </div>
);

const Accordion = ({ items }) => {
    const [openIndex, setOpenIndex] = useState(0);

    return (
        <div className="w-full">
            {items.map((item, i) => (
                <AccordionItem key={i}>
                    <AccordionTrigger
                        isOpen={openIndex === i}
                        onClick={() => setOpenIndex(openIndex === i ? null : i)}
                    >
                        {item.question}
                    </AccordionTrigger>
                    <AccordionContent isOpen={openIndex === i}>
                        {item.answer}
                    </AccordionContent>
                </AccordionItem>
            ))}
        </div>
    );
};

